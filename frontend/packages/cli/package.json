{
  "name": "@liam-hq/cli",
  "description": "Command-line tool designed to generate a web application that displays ER diagrams. See https://liambx.com/docs/cli",
  "keywords": [
    "data-visualization",
    "entity-relationship-diagram",
    "er-diagram",
    "erd"
  ],
  "homepage": "https://github.com/liam-hq/liam",
  "bugs": "https://github.com/liam-hq/liam/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/liam-hq/liam.git"
  },
  "license": "Apache-2.0",
  "private": false,
  "version": "0.7.20",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "liam": "./dist-cli/bin/cli.js"
  },
  "dependencies": {
    "@liam-hq/erd-core": "workspace:*",
    "@liam-hq/schema": "workspace:*",
    "@prisma/internals": "6.8.2",
    "@swc/core": "1.12.11",
    "commander": "13.1.0",
    "glob": "11.0.3",
    "ink": "6.0.1",
    "ink-gradient": "3.0.0",
    "inquirer": "12.6.3",
    "neverthrow": "8.2.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "valibot": "1.1.0",
    "yoctocolors": "2.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@liam-hq/configs": "workspace:*",
    "@rollup/plugin-commonjs": "28.0.6",
    "@rollup/plugin-node-resolve": "16.0.2",
    "@rollup/plugin-typescript": "12.1.4",
    "@types/node": "22.18.6",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react": "4.6.0",
    "eslint": "9.36.0",
    "rollup": "4.52.4",
    "rollup-plugin-execute": "1.1.1",
    "typed-css-modules": "0.9.1",
    "typescript": "5.9.2",
    "vite": "6.3.6",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "scripts": {
    "build": "concurrently \"pnpm:build:*\"",
    "build:cli": "rollup -c  && pnpm run cp:prism",
    "build:vite": "vite build",
    "command:build": "node ./dist-cli/bin/cli.js erd build --input https://github.com/mastodon/mastodon/blob/main/db/schema.rb --format schemarb",
    "cp:prism": "cp ../schema/node_modules/@ruby/prism/src/prism.wasm ./dist-cli/bin/prism.wasm",
    "dev": "pnpm command:build && cp dist/schema.json public/ && concurrently \"pnpm:dev:*\"",
    "dev:app": "vite --port 5173",
    "dev:css": "tcm src --watch",
    "fmt": "concurrently \"pnpm:fmt:*\"",
    "fmt:biome": "biome check --write --unsafe .",
    "fmt:eslint": "eslint --fix .",
    "gen": "concurrently \"pnpm:gen:*\"",
    "gen:css": "tcm src",
    "lint": "concurrently \"pnpm:lint:*\"",
    "lint:biome": "biome check .",
    "lint:eslint": "echo 'ESLint disabled for cli package' || eslint .",
    "lint:tsc": "tsc --noEmit",
    "postpack": "node scripts/pack-cli.js post",
    "prepack": "node scripts/pack-cli.js pre",
    "test": "vitest run"
  },
  "files": [
    "dist-cli/**/*"
  ]
}
